@{
}

<h1 class="text-center mt-4">Expense Tracker</h1>
<h6 class="text-center mt-4">Web application for calculating transactions in the last 7 days</h6>
<hr />
<div class="row mb-4">
    <div class="col-md-4">
        <div class="d-flex flex-row">
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Total Income</span>
                <h1 class="fw-bold">@ViewBag.TotalIncome</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row">
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Total Expense</span>
                <h1 class="fw-bold">@ViewBag.TotalExpense</h1>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-row">
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Balance</span>
                <h1 class="fw-bold">@ViewBag.Balance</h1>
            </div>
        </div>
    </div>
</div>