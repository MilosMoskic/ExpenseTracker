@model ExpenseTracker.Modeli.Kategorija

@{
    ViewData["Title"] = "Napravi";
}

<h4 class="mt-2">Napravi Kategoriju</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DodajIliIzmeni">
            <input type="hidden" name="KategorijaId" value="@Model.KategorijaId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group my-2">
                  <div class="e-btn-group">
                    <input type="radio" id="radioleft" name="Tip" value="Trosak" checked="@(Model.Tip =="Trosak")" />
                    <label class="e-btn" for="radioleft">Trosak</label>
                    <input type="radio" id="radiomiddle" name="Tip" value="Prihod" checked="@(Model.Tip =="Prihod")" />
                    <label class="e-btn" for="radiomiddle">Prihod</label>
                  </div>
                  <span asp-validation-for="Tip" class="text-danger"></span>
              </div>
              <div class="form-group my-2">
                <label asp-for="Naziv" name="Naziv" placeholder="Naziv" value="Naziv" class="w-25">Naziv</label>
                <input asp-for="Naziv" class="form-control w-50">
                <span asp-validation-for="Naziv" class="text-danger fs-6"></span>
              </div>
              <div class="form-group my-2">
                <label asp-for="Ikonica" name="Ikonica" placeholder="Ikonica" value="Ikonica" class="w-25">Ikonica (Win + .)</label>
                <input asp-for="Ikonica" class="form-control w-50">
                <span asp-validation-for="Ikonica" class="text-danger fs-6"></span>
              </div>
              <br/>
              <button type="submit" class="btn btn-primary">Napravi</button>
              <a asp-action="Index" class="btn btn-warning my-1">Nazad na listu</a>
        </form>
    </div>
</div>
