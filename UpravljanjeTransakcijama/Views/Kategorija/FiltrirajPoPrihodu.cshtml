@model IEnumerable<ExpenseTracker.Modeli.Kategorija>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Categories</h1>

<p>
    <a asp-action="DodajIliIzmeni" class="btn btn-success my-1">Create New</a>
</p>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filtriraj po Tipu
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" asp-action="Index">Bez Filtera</a>
        <a class="dropdown-item" asp-action="FiltrirajPoPrihodu">Prihod</a>
        <a class="dropdown-item" asp-action="FiltrirajPoTrosku">Trosak</a>
  </div>
</div>

<table class="table w-75">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tip)
            </th>
            <th>
                Opcije
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Tip == "Prihod")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipSaIkonicom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tip)
                    </td>
                    <td>
                        <a asp-action="DodajIliIzmeni" asp-route-id="@item.KategorijaId" class="btn btn-success my-1">
                            <i class="bi bi-pencil-fill"></i>&nbsp;Izmeni
                        </a>
                        @using (Html.BeginForm("Obrisi", "Kategorija", new { id = @item.KategorijaId }))
                        {
                            <input type="submit" value="Obrisi" onclick="return confirm(&quot;Da li ste sigurni da zelite da obrisi ovu kategoriju?&quot;)" />
                        }
                    </td>
                </tr>
            }}
    </tbody>
</table>
