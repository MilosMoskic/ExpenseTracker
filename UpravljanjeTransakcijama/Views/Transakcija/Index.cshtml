@using System.Security.Claims;
@model IEnumerable<ExpenseTracker.Modeli.Transakcija>

@{
    ViewData["Title"] = "Index";
    var korisnikId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<h1>Lista Transakcija</h1>

<p>
    <a asp-action="DodajIliIzmeni" class="btn btn-success my-1">Napravi novu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kategorija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kolicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                Opcije
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if(item.AppUserID == korisnikId){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija.TipSaIkonicom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KolicinaZaFormatiranje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Convert.ToDateTime(item.Datum).ToString("d/MMM/yyyy")
            </td>
            <td>
                <a asp-action="DodajIliIzmeni" asp-route-id="@item.TransakcijaId" class="btn btn-success my-1">
                <i class="bi bi-pencil-fill"></i>&nbsp;Izmeni</a>
                @using (Html.BeginForm("Obrisi", "Transakcija", new { id = @item.TransakcijaId }))
                {
                        <input type="submit" value="Obrisi" onclick="return confirm(&quot;Da li ste sigurni da zelite da obrisete ovu transakciju?&quot;)"/> 
                }
                <a asp-action="Ispis" asp-route-id="@item.TransakcijaId" class="btn btn-success my-1">
                    <i class="">Ispis</i>
                </a>
            </td>
        </tr>
    }

}
    </tbody>
</table>
